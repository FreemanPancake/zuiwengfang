/* pages/mine/addAddress.wxss */
@import '../../resource/weixin/weui.wxss';

.top-line {
  height: 1rpx;
  width: 100%;
  border-bottom: 1rpx #ddd solid;
}

.page {
  background-color: #fff;
}

.item-view {
  border-bottom: 1rpx #ddd solid;
  padding-top: 24rpx;
  padding-bottom: 24rpx;
  margin-left: 24rpx;
}

.left-view {
  width: 120rpx;
  margin-right: 24rpx;
}

.placeholder text {
  color: blue;
}

.item-view_end {
  padding-top: 24rpx;
  padding-bottom: 24rpx;
  margin-left: 24rpx;
}

.confirm-button {
  width: 80%;
  height: 86rpx;
  line-height: 86rpx;
  background: red;
  margin-top: 15px;
  color: white;
}

.item-sign {
  width: 86rpx;
  float: left;
  border: 1rpx #ccc solid;
  border-radius: 10%;
  padding: 0 8rpx;
  margin-right: 24rpx;
  text-align: center;
  margin-bottom: 24rpx;
}
.item-sign_choose{
   width: 86rpx;
  float: left;
  border: 1rpx red solid;
  border-radius: 10%;
  padding: 0 8rpx;
  margin-right: 24rpx;
  text-align: center;
  margin-bottom: 24rpx;
  color: red
}

.sign-add {
  width: 32rpx;
  height: 32rpx;
  float: left;
  border: 1rpx #ccc solid;
  border-radius: 10%;
  padding: 8rpx 24rpx;
  margin-right: 24rpx;
  text-align: center;
  margin-bottom: 24rpx;
}


.model-view{
  width: 100%;
  padding-top:48rpx; 
}

.model-input{
  padding-left: 12rpx;
  padding-top: 16rpx;
  padding-bottom: 16rpx;
  background: #EEE;
}